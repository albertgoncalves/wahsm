#!/usr/bin/env bash

if [ "$(uname -s)" = "Darwin" ]; then
    alias ls="ls --color=auto"
    alias ll="ls -l"
else
    alias open="xdg-open"
fi

export WD=$PWD

if [ ! -d "$WD/bin" ]; then
    mkdir "$WD/bin"
fi

sedtrailing () {
    sed -i 's/[ \t]\+$//' "$1"
}

export -f sedtrailing

htmlall () {
    find \
        . \
        -type f \
        -name '*.html' \
        -exec bash -c '
            echo "$1"
            tidy -config "$WD/.tidyrc" -q -m "$1"
            sedtrailing "$1"
        ' bash {} \;
}

jsall () {
    find \
        . \
        -type f \
        -name '*.js' \
        -exec bash -c '
            echo "$1"
            clang-format -i "$1"
        ' bash {} \;
}

export -f htmlall
export -f jsall
